package Map;

/**
 * This is Node class
 * 
 * @author Rated-R Coder: Rashid Darwish
 * 
 */
public class Node {

	private String id;
	private String lat;
	private String lon;

	/**
	 * Constructor
	 * @param id
	 * @param lat
	 * @param lon
	 */
	public Node(String id, String lat, String lon) {
		this.id = id;
		this.lat = lat;
		this.lon = lon;
	}

	/**
	 * Latitude getter
	 * @return Latitude
	 */
	public Double getLat() {
		return Double.valueOf(lat);
	}

	/** 
	 * Latitude setter
	 * @param lat 
	 */
	public void setLat(String lat) {
		this.lat = lat;
	}

	/**
	 * Longitude getter
	 * @return Longitude
	 */
	public Double getLon() {
		return Double.valueOf(lon);
	}

	/**
	 * Longitude settter
	 * @param lon
	 */
	public void setLon(String lon) {
		this.lon = lon;
	}

	/**
	 * id getter
	 * @return id
	 */
	public String getId() {
		return id;
	}

	/**
	 * id setter
	 * @param id
	 */
	public void setId(String id) {
		this.id = id;
	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see java.lang.Object#toString()
	 */
	@Override
	public String toString() {
		return ("Node: ID: " + id + "   Lat: " + lat + "   Lon: " + lon);
	}
}
