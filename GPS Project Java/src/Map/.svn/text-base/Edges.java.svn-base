package Map;

/**
 * Class Edges
 * 
 * @author Rated-R Coder: Rashid Darwish
 * 
 */
public class Edges {

	private Node source;
	private Node destination;
	private double weight;

	/**
	 * Edges Constructor
	 * @param source
	 * @param destination
	 * @param weight
	 */
	public Edges(Node source, Node destination, double weight) {
		this.source = source;
		this.destination = destination;
		this.weight = weight;
	}

	/**
	 * @return destination node
	 */
	public Node getDestination() {
		return destination;
	}

	/**
	 * @return source node
	 */
	public Node getSource() {
		return source;
	}

	/**
	 * @return weight
	 */
	public double getWeight() {
		return weight;
	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see java.lang.Object#toString()
	 */
	@Override
	public String toString() {
		return source + " " + weight + " " + destination;
	}
}
